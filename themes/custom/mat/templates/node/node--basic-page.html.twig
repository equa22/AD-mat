
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
{% if parent_title is not empty and parent_image is not empty %}
<section class="basic-header {{ parent_style }}">
  <div class="basic-header--heading">
    <div class="basic-header--bg" style="background-image: url('{{ parent_image }}');"></div>
    <div class="basic-header--gradient"></div>
    <div class="container">
      <h3>{{ parent_title }}</h3>
      <h1>{{ label }}</h1>
    </div>
  </div>
  {% if node.field_main_description %}
    <div class="basic-header--content container">{{ node.field_main_description.value }}</div>
  {% endif %}
</section>
{% else %}
<section class="basic-header {{ node.field_header_style.value }}">
  <div class="basic-header--heading">
    <div class="basic-header--bg" style="background-image: url('{{ file_url(node.field_parent_background_image.entity.uri.value) }}');"></div>
    <div class="basic-header--gradient"></div>
    <div class="container">
      <h1>{{ label }}</h1>
    </div>
  </div>
  {% if node.field_main_description %}
    <div class="basic-header--content container">{{ node.field_main_description.value }}</div>
  {% endif %}
</section>
{% endif %}
<article{{ attributes.addClass(classes) }}>

  {% if display_submitted %}
    <footer class="node__meta">
      {{ author_picture }}
      <div{{ author_attributes.addClass('node__submitted') }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <div{{ content_attributes.addClass('node__content') }}>

    {{ content|without('field_cover_image') }}
  </div>

</article>
