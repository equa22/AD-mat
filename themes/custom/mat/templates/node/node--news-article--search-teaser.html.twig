<div class="search-result result-news-article {% if node.field_search_image_media is not empty %} result-with-image{% endif %}">
  {% if node.field_search_image_media is not empty %}
  <div class="search-result--img" style="background-image: url('{{ content.field_search_image_media.0 }}')"></div>
  {% endif %}
  <div class="search-result--heading">
    <div class="search-result--title">
      <a href="{{ path('entity.node.canonical', {'node': node.id}) }}">{{ label }}</a>
    </div>
    <a href="{{ path('entity.node.canonical', {'node': node.id}) }}">{{ 'Link URL'| t }} {{ url('entity.node.canonical', {'node': node.id}) }}</a>
  </div>
  {% if node.field_excerpt is not empty %}
  <div class="search-result--text">
    {{ node.field_excerpt.value|length > 270 ? node.field_excerpt.value|slice(0, 270) ~ '...' : node.field_excerpt.value }}
  </div>
  {% endif %}
  <hr>
</div>
