
{% set pargraph_col = paragraph.field_paragraph_column.value %}
{% set view_mode = (content.field_webform['#view_mode'] is empty) %}

{%
  set classes = [
    'paragraph',
    pargraph_col,
    'paragraph--type--' ~ paragraph.bundle|clean_class,
  ]
%}

{% if view_mode %}
  {% block paragraph %}
    <div{{ attributes.addClass(classes) }}>
      <div class="inner">
        {% block content %}
          {{ content }}
        {% endblock %}
      </div>
    </div>
  {% endblock paragraph %}
{% endif %}
